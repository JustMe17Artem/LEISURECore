@model LEISURECore.Object

<div class="row justify-content-lg-cehter">
    <h1>Новый объект</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label">Адрес</label>
                <input asp-for="Adress" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label">Вместительность</label>
                <input asp-for="Capacity" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>